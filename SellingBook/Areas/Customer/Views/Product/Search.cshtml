@model List<SellingBook.Models.BasicModels.Product>

<h2>Kết quả tìm kiếm</h2>

@if (Model.Any())
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text text-danger fw-bold">@product.ProductPrice.ToString("N0") <u>đ</u></p>
                        <a href="/Customer/Product/Display/@product.ProductId" class="btn btn-primary">ViewDeatal</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Không tìm thấy sản phẩm nào.</p>
}