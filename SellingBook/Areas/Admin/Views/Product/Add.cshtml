@model SellingBook.Models.BasicModels.Product
@{
    var abc = ViewBag.Categories;
    Console.WriteLine(abc);
}
@inject IViewLocalizer Localizer

<div class="container mt-4">
    <h1 class="mb-4">@Localizer["Add Product"]</h1>

    <div class="card p-4 shadow-lg">
        <form asp-area="Admin" asp-action="AddConfirmed" enctype="multipart/form-data" class="needs-validation" novalidate>
            <div asp-validation-summary="All" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="ProductName" class="form-label fw-bold">@Localizer["Product Name"]</label>
                <input asp-for="ProductName" class="form-control" required />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProductPrice" class="form-label fw-bold">@Localizer["Product Price"]</label>
                <input asp-for="ProductPrice" type="number" class="form-control" required />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold">@Localizer["Description"]</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Category dropdown -->
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label fw-bold">@Localizer["Category"]</label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                    <option value="">@Localizer["Select a category"]</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label fw-bold">@Localizer["Image"]</label>
                <input asp-for="ImageUrl" type="file" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Images" class="form-label fw-bold">@Localizer["Images"]</label>
                <input asp-for="Images" type="file" class="form-control" multiple />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">@Localizer["Add"]</button>
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">
                    @Localizer["Back to Products"]
                </a>
            </div>
        </form>
    </div>
</div>
