@model SellingBook.Models.BasicModels.Product
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <h2 class="text-danger">Are you sure you want to delete this?</h2>

    <div class="border p-3 rounded shadow-sm bg-light">
        <h4><strong>Name:</strong> @Model.ProductName</h4>
        <h4><strong>Price:</strong> @Model.ProductPrice</h4>
        <h4><strong>Description:</strong> @Model.Description</h4>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="mt-3" asp-route-id="@Model.ProductId">
        <input type="hidden" asp-for="@Model.ProductId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

