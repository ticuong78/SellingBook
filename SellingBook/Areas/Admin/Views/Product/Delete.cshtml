@model SellingBook.Models.BasicModels.Product
@* Removed: @inject IViewLocalizer Localizer *@
<div class="container mt-4">
    <h2 class="text-danger">Are you sure you want to delete this product?</h2>

    <div class="border p-3 rounded shadow-sm bg-light">
        <h4><strong>Name:</strong> @Model.ProductName</h4>
        <h4><strong>Price:</strong> @Model.ProductPrice</h4>
        <h4><strong>Description:</strong> @Model.Description</h4>
    </div>

    <form asp-area="Admin" asp-controller="Product" asp-route-id="@Model.ProductId" asp-action="DeleteConfirmed" method="post" class="mt-3">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>