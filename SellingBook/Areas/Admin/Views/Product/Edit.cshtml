@model SellingBook.Models.BasicModels.Product
@inject IViewLocalizer Localizer
<div class="container mt-4">
    <h2 class="mb-4">@Localizer["Edit Product"]</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-area="Admin" asp-action="EditConfirmed" asp-controller="Product" enctype="multipart/form-data" class="needs-validation" novalidate>
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" asp-for="CategoryId" />

                <div class="mb-3">
                    <label asp-for="ProductName" class="form-label">@Localizer["ProductName"]</label>
                    <input asp-for="ProductName" class="form-control" required />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductPrice" class="form-label">@Localizer["ProductPrice"]</label>
                    <input asp-for="ProductPrice" type="number" class="form-control" required />
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">@Localizer["Description"]</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label">@Localizer["Category"]</label>
                    <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
                        <option value="">@Localizer["Select a category"]</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">@Localizer["Image"]</label>
                    <input asp-for="ImageUrl" type="file" class="form-control" id="imageInput" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">@Localizer["Submit"]</button>
            </form>

            <div class="mt-4 text-center">
                <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail shadow-sm" style="max-width:200px;" id="previewImage" />
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('imageInput').addEventListener('change', function (event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById("previewImage").src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    });
</script>
