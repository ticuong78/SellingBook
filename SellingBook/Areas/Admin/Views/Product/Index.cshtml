@model IEnumerable<SellingBook.Models.BasicModels.Product>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Product Management</h1>
<p>Welcome to the Product management page!</p>

<div class="container mt-4">
    <h2 class="mb-4">Products</h2>

    <table class="table table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.ProductPrice.ToString("C")</td>
                    <td>@product.Description</td>
                    <td class="text-center">
                        <a asp-area="Admin" asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-area="Admin" asp-action="Display" asp-route-id="@product.ProductId" class="btn btn-sm btn-info text-white">View</a>
                        <a asp-area="Admin" asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
            <tr class="table-light text-center" onclick="window.location='@Url.Action("Add", "Product")'" style="cursor:pointer;">
                <td colspan="4" class="fw-bold text-primary">+ Add New Product</td>
            </tr>
        </tbody>
    </table>
</div>