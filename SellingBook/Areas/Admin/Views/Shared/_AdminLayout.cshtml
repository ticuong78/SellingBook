<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Categories", new { area = "Admin" })">
                                <i class="bi bi-box"></i> Categories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Product", new { area = "Admin" })">
                                <i class="bi bi-boxes"></i> Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "DailyStatistic", new { area = "Admin" })">
                                <i class="bi bi-calendar-day"></i> Daily Statistics
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "MonthlyStatistic", new { area = "Admin" })">
                                <i class="bi bi-calendar-month"></i> Monthly Statistics
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Coupon", new { area = "Admin" })">
                                <i class="bi bi-ticket-perforated"></i> Coupons
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-4">
                <!-- Manager Title and Back Button -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>Manager - Admin Dashboard</h1>
                    <a href="/" class="btn btn-secondary">Back to Home</a> <!-- Link to Home page -->
                </div>

                @RenderBody()  <!-- Body content will be rendered here -->

            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
