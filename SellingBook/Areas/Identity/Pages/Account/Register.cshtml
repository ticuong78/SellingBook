@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <!-- Registration Form -->
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                <!-- Registration Form -->
                                <form id="registerForm" method="post">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Input.FullName" class="form-control" placeholder="Your Name" required />
                                            <label asp-for="Input.FullName" class="form-label">Your Name</label>
                                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Input.Email" class="form-control" placeholder="Your Email" required />
                                            <label asp-for="Input.Email" class="form-label">Your Email</label>
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" required />
                                            <label asp-for="Input.Password" class="form-label">Password</label>
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Repeat your password" required />
                                            <label asp-for="Input.ConfirmPassword" class="form-label">Repeat your password</label>
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <!-- Select Role Dropdown -->
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user-tag fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-control">
                                                <option disabled selected>Select Role</option>
                                            </select>
                                            <label asp-for="Input.Role" class="form-label">Role</label>
                                        </div>
                                    </div>

                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                                        <label class="form-check-label" for="form2Example3">
                                            I agree all statements in <a href="#!">Terms of service</a>
                                        </label>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                    </div>
                                </form>

                                <!-- Confirmation Email Link (Added) -->
                                <div class="text-center mt-4">
                                    <p>
                                        After registering, please <a href="@Url.Page("/Account/ConfirmEmail")">confirm your email</a>.
                                    </p>
                                </div>
                            </div>

                            <!-- Image Content -->
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
