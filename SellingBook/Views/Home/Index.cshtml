@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background: linear-gradient(to right, #fef9f3, #f2f4f8);
        font-family: 'Segoe UI', sans-serif;
    }

    .welcome-content {
        text-align: center;
        padding: 120px 20px;
    }

        .welcome-content h1 {
            font-size: 3.5rem;
            color: #333;
            font-weight: 700;
            margin-bottom: 25px;
        }

        .welcome-content p.quote {
            font-size: 1.5rem;
            font-style: italic;
            color: #555;
            margin-bottom: 15px;
        }

        .welcome-content p.description {
            font-size: 1.1rem;
            color: #666;
            margin-bottom: 40px;
        }

    .start-btn {
        background-color: #0d6efd;
        color: #fff;
        padding: 14px 40px;
        border-radius: 50px;
        text-decoration: none;
        font-size: 1.2rem;
        transition: background 0.3s ease;
    }

        .start-btn:hover {
            background-color: #0b5ed7;
        }

    .product-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
        padding: 40px 20px;
    }

    .product-item {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: center;
        transition: transform 0.3s ease;
    }

        .product-item:hover {
            transform: translateY(-10px);
        }

    .product-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
    }

    .product-title {
        font-size: 1.2rem;
        margin-top: 15px;
        color: #333;
    }

    .product-price {
        font-size: 1.1rem;
        color: #0d6efd;
        margin-top: 10px;
    }
</style>

<div class="welcome-content">
    <h1>@Localizer["Hello user, welcome to your next favorite bookstore!"]</h1>
    <p class="quote">"@Localizer["A room without books is like a body without a soul."]"</p>
    <p class="description">@Localizer["Browse through our collection, find your next read, and enjoy the journey."]</p>
    <a href="/Customer/Product" class="start-btn">@Localizer["Start Exploring"]</a>
</div>


<!-- Sản phẩm hiển thị sau khi lướt xuống -->
<div class="product-list">
    @foreach (var product in Model)
    {
        <div class="product-item">
            <img src="@product.ImageUrl" alt="@product.Name" class="product-image" />
            <h3 class="product-title">@product.Name</h3>
            <p class="product-price">@product.Price.ToString("C")</p>
            <a href="/Customer/Product/Details/@product.Id" class="btn btn-primary">View Details</a>
        </div>
    }
</div>
