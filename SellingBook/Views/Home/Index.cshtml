@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background: linear-gradient(to right, #fef9f3, #f2f4f8);
        font-family: 'Segoe UI', sans-serif;
    }

    .welcome-content {
        text-align: center;
        padding: 120px 20px;
    }

    .welcome-content h1 {
        font-size: 3.5rem;
        color: #333;
        font-weight: 700;
        margin-bottom: 25px;
    }

    .welcome-content p.quote {
        font-size: 1.5rem;
        font-style: italic;
        color: #555;
        margin-bottom: 15px;
    }

    .welcome-content p.description {
        font-size: 1.1rem;
        color: #666;
        margin-bottom: 40px;
    }

    .start-btn {
        background-color: #0d6efd;
        color: #fff;
        padding: 14px 40px;
        border-radius: 50px;
        text-decoration: none;
        font-size: 1.2rem;
        transition: background 0.3s ease;
    }

    .start-btn:hover {
        background-color: #0b5ed7;
    }
</style>

<div class="welcome-content">
    <h1>Hello user, welcome to your next favorite bookstore!</h1>
    <p class="quote">"A room without books is like a body without a soul."</p>
    <p class="description">Browse through our collection, find your next read, and enjoy the journey.</p>
    <a href="/Customer/Product" class="start-btn">Start Exploring</a>
</div>
