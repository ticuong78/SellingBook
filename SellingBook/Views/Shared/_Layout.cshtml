﻿<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nhà sách Việt Nam</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SellingBook.styles.css" asp-append-version="true" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Smaller cart quantity indicator */
        .cart-quantity {
            text-align: center;
            font-size: 10px;
            width: 15px;
            height: 15px;
            position: absolute;
            border-radius: 50%;
            background-color: red;
            color: white;
            bottom: -5px;
            right: -5px;
            line-height: 15px;
        }

        .navbar {
            padding-right: 10px;
        }

        .search-bar {
            width: 400px; /* Adjust as needed */
            max-width: 100%;
        }

        /* Bigger icons */
        .nav-icon {
            font-size: 1.5rem; /* Equivalent to Bootstrap fs-4 */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Nhà sách Việt Nam</a>

            <!-- Thanh tìm kiếm -->
            <form class="d-flex flex-grow-1 mx-3" method="get" action="/Product/Search" style="max-width: 500px;">
                <input class="form-control me-2 search-bar" type="search" name="keyword" placeholder="Tìm kiếm sản phẩm..." aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Tìm kiếm</button>
            </form>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item position-relative">
                        <a class="nav-link" href="/Cart">
                            <i class="bi bi-cart3 nav-icon"></i>
                            <span class="cart-quantity" style="display: @(ViewBag.CartQuantity != null && ViewBag.CartQuantity != 0 ? "block": "none")">@ViewBag.CartQuantity</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Login">
                            <i class="bi bi-person nav-icon"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/payment.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
