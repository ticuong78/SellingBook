@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PaymentSuccessTitle"];
}

<div class="container text-center py-5">
    <h2 class="text-success">@Localizer["PaymentSuccessHeader"]</h2>
    <p class="lead">
        @Localizer["ThankYouMessage"] <strong>Nhà sách Việt Nam</strong>.
    </p>
    <p>@Localizer["OrderCode"] <strong>@ViewBag.OrderId</strong></p>
    <p>@Localizer["PaymentAmount"] <strong>@ViewBag.Amount VND</strong></p>

    <div class="my-4">
        <a href="/" class="btn btn-primary">@Localizer["ContinueShopping"]</a>
        <a href="/Order/Details?id=@ViewBag.OrderId" class="btn btn-outline-secondary">@Localizer["ViewOrder"]</a>
    </div>

    <div class="alert alert-info mt-4" role="alert">
        @Localizer["SupportNote"] <a href="/Contact">@Localizer["CustomerSupport"]</a>.
    </div>

    <!-- Thêm phần bình luận sau khi thanh toán thành công -->
    <div class="mt-5">
        <h3>@Localizer["LeaveComment"]</h3>
        <form method="post" asp-controller="Checkout" asp-action="SubmitComment">
            <div class="form-group">
                <label for="comment">@Localizer["YourComment"]</label>
                <textarea id="comment" name="comment" class="form-control" rows="4" placeholder="@Localizer["WriteYourCommentHere"]"></textarea>
            </div>
            <button type="submit" class="btn btn-success">@Localizer["SubmitComment"]</button>
        </form>

    </div>
</div>
